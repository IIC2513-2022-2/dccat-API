{
  "name": "dcc2048",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "A basic 2048 game with DCC theme",
  "main": "index.js",
  "repository": "git@github.com:IIC2513-2022-2/dcc2048",
  "author": "IIC2513-2022-2",
  "license": "MIT",
  "scripts": {
    "start": "node src/index.js",
    "dev": "yarn nodemon src/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "pretest": "cross-env NODE_ENV=test yarn run migrate:reset",
    "migrate:reset": "yarn sequelize-cli db:drop && yarn run setup_test_db",
    "setup_test_db": "yarn sequelize-cli db:create && yarn sequelize-cli db:migrate && yarn sequelize-cli db:seed:all --seeders-path seeders/test_seeds"
  },
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.2",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-jwt": "^4.0.3",
    "koa-logger": "^3.2.1",
    "koa-router": "^12.0.0",
    "koa-session": "^6.2.0",
    "pg": "^8.8.0",
    "sequelize": "^6.21.6",
    "sequelize-cli": "^6.4.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^27.1.5",
    "jest": "^29.3.1",
    "nodemon": "^2.0.19",
    "supertest": "^6.3.1"
  }
}
